{
    "python.analysis.extraPaths": [
        "pyglotaran",
        "pyglotaran-extras"
    ],
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "never",
            "source.fixAll": "never"
        }
    },
    "ruff.organizeImports": false,
}
